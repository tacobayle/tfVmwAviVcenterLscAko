apiVersion: ako.vmware.com/v1alpha1
kind: HostRule
metadata:
  name: my-host-rule1
  namespace: default
spec:
  virtualhost:
    fqdn: ingress${cluster}.${domain}
    enableVirtualHost: true
    wafPolicy: System-WAF-Policy
    tls: # optional
      sslKeyCertificate:
        name: System-Default-Cert-EC
        type: ref
    gslb:
      fqdn: ingress.${gslb_domain}
      includeAliases: false
